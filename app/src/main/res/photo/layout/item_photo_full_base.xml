<?xml version="1.0" encoding="utf-8"?>
<com.wangdaye.mysplash.common.ui.widget.coordinatorView.FullScreenLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.wangdaye.mysplash.common.ui.widget.coordinatorView.StatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            app:sbv_fill_in_mode="true" />

        <TextView
            android:id="@+id/item_photo_full_base_storyTitle"
            android:textSize="30sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/mini_icon_size"
            android:layout_marginRight="@dimen/mini_icon_size"
            style="@style/large_title_text"
            tools:text="Frozen Bubbles"/>

        <TextView
            android:id="@+id/item_photo_full_base_storyContent"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="@dimen/mini_icon_size"
            android:layout_marginLeft="@dimen/mini_icon_size"
            android:layout_marginRight="@dimen/mini_icon_size"
            style="@style/content_text"
            tools:text="One of the best parts of online communities is the ability to be inspired by others and challenged to try new projects. I saw friends posting photos of frozen bubbles on Instagram. So I decided to try it on activity morning when it was 10 degrees outside. My hands almost froze off, but it was worth it."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.wangdaye.mysplash.common.ui.widget.CircleImageView
                android:id="@+id/item_photo_full_base_avatar"
                android:layout_width="@dimen/normal_icon_size"
                android:layout_height="@dimen/normal_icon_size"
                android:layout_marginLeft="@dimen/mini_icon_size"
                android:layout_marginTop="@dimen/mini_icon_size"
                android:layout_marginBottom="@dimen/mini_icon_size"
                android:layout_marginRight="@dimen/normal_margin"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="?attr/line_color"
                android:stateListAnimator="@animator/touch_rise_avatar"
                tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mini_icon_size"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/item_photo_full_base_title"
                    style="@style/title_text"
                    android:singleLine="true"
                    android:textColor="?attr/title_color"
                    tools:ignore="RtlHardcoded"
                    tools:text="By Wang Yueeeeeee" />

                <TextView
                    android:id="@+id/item_photo_full_base_subtitle"
                    style="@style/subtitle_text"
                    android:layout_marginTop="@dimen/nano_margin"
                    android:maxLines="1"
                    tools:ignore="RtlHardcoded"
                    tools:text="ON 2016-07-23" />

            </LinearLayout>

        </LinearLayout>

        <com.wangdaye.mysplash.common.ui.widget.PhotoButtonBar
            android:id="@+id/item_photo_full_base_btnBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="72dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:alpha="0.1" />

</com.wangdaye.mysplash.common.ui.widget.coordinatorView.FullScreenLayout>